{
	"name": "tailwindcss-plugin-ark-ui",
	"type": "module",
	"license": "MIT",
	"version": "0.0.1",
	"exports": {
		".": {
			"import": {
				"types": "./dist/index.d.ts",
				"default": "./dist/index.js"
			},
			"require": {
				"types": "./dist/index.d.cts",
				"default": "./dist/index.cts"
			}
		},
		"./package.json": {
			"default": "./package.json"
		}
	},
	"files": [
		"dist"
	],
	"publishConfig": {
		"access": "public"
	},
	"packageManager": "pnpm@9.15.1",
	"author": {
		"name": "John Paul Calvo",
		"email": "calvojp92@gmail.com"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/calvo-jp/tailwindcss-plugin-ark-ui.git",
		"directory": "packages/tailwindcss"
	},
	"bugs": {
		"url": "https://github.com/calvo-jp/tailwindcss-plugin-ark-ui/issues",
		"email": "calvojp92@gmail.com"
	},
	"description": "TailwindCSS plugin for Ark UI",
	"keywords": [
		"tailwindcss",
		"ark-ui",
		"plugin"
	],
	"scripts": {
		"test": "vitest",
		"lint": "biome lint .",
		"format": "biome format --write .",
		"build": "tsup",
		"release": "release-it"
	},
	"devDependencies": {
		"@biomejs/biome": "^1.9.4",
		"@tsconfig/node22": "^22.0.0",
		"@types/node": "^22.10.2",
		"postcss": "^8.4.49",
		"release-it": "^17.11.0",
		"tailwindcss": "^3.4.17",
		"tsup": "^8.3.5",
		"typescript": "^5.7.2",
		"vitest": "^2.1.8"
	},
	"peerDependencies": {
		"tailwindcss": "^3.3.3"
	},
	"release-it": {
		"git": {
			"commitMessage": "chore: release ${npm.name} v${version}",
			"tagName": "${npm.name}@${version}"
		},
		"github": {
			"release": false
		},
		"hooks": {
			"before:init": [
				"pnpm lint",
				"pnpm test"
			],
			"after:bump": [
				"pnpm build"
			]
		}
	}
}
